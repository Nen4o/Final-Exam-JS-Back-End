<main>
    {{#if error}}
    <div class="error-containers">
        <p>{{error}}</p>
    </div>
    {{/if}}

    <form method="POST" class="planet-form">
        <label for="name">Name of Planet:</label>
        <input type="text" id="name" value="{{planetData.name}}" name="name">

        <label for="age">Age (in billion years):</label>
        <input type="number" value="{{planetData.age}}" id="age" name="age">

        <label for="solarSystem">Solar System:</label>
        <input type="text" value="{{planetData.solarSystem}}" id="solarSystem" name="solarSystem">

        <label for="type">Type:</label>
        <select id="type" name="type">
            <option {{#if (eq planetData.type '---')}} selected {{/if}}  value="---" >---</option>
            <option {{#if (eq planetData.type 'Inner')}} selected {{/if}} value="Inner">Inner</option>
            <option {{#if (eq planetData.type 'Outer')}} selected {{/if}} value="Outer">Outer</option>
            <option {{#if (eq planetData.type 'Dwarf')}} selected {{/if}} value="Dwarf">Dwarf</option>
        </select>

        <label for="moons">Moons (count):</label>
        <input type="number" value="{{planetData.moons}}" id="moons" name="moons">

        <label for="size">Size (in km):</label>
        <input type="number" value="{{planetData.size}}" id="size" name="size">

        <label for="rings">Rings:</label>
        <select id="rings" name="rings">
            <option {{#if (eq planetData.rings '---')}} selected {{/if}} value="---" selected>---</option>
            <option {{#if (eq planetData.rings 'Yes')}} selected {{/if}} value="Yes">Yes</option>
            <option {{#if (eq planetData.rings 'No')}} selected {{/if}} value="No">No</option>
        </select>

        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4">{{planetData.description}}</textarea>

        <label for="image">Image URL:</label>
        <input type="url" id="image" value="{{planetData.image}}" name="image">

        <button type="submit">Add Planet</button>
    </form>
</main>