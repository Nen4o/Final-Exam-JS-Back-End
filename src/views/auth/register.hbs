<main>
    {{#if error}}
     <div class="error-containers">
            <p>{{error}}</p>
        </div> 
    {{/if}}

    <form class="register-form" method="POST">
        <label for="username">Username:</label>
        <input type="text" id="username" value="{{registerData.username}}" name="username">

        <label for="email">Email:</label>
        <input type="email" id="email" value="{{registerData.email}}" name="email">

        <label for="password">Password:</label>
        <input type="password" id="password" value="{{registerData.password}}" name="password">

        <label for="confirm-password">Confirm Password:</label>
        <input type="password" id="confirm-password" value="{{registerData.rePassword}}" name="rePassword">

        <button type="submit">Register</button>
        <p class="login">Already have an account? <a href="/login">Login here</a></p>
    </form>
</main>